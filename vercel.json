{
  "version": 2,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node@5" }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/api/index.js" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "http://localhost:3000, http://localhost:3001, https://taras-kart-shopping-mall.vercel.app, https://taras-kart-admin.vercel.app" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,HEAD,PUT,PATCH,POST,DELETE" },
        { "key": "Access-Control-Allow-Headers", "value": "authorization,content-type" },
        { "key": "Access-Control-Allow-Credentials", "value": "true" }
      ]
    }
  ]
}
